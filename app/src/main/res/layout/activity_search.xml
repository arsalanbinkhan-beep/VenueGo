<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_filter_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple_background"
    tools:context=".SearchFilterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/title_search_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search &amp; Filter"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/et_search_venue"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_edittext_background"
                android:drawableStart="@drawable/ic_search"
                android:drawablePadding="12dp"
                android:hint="Search for venue name, type..."
                android:textColorHint="@color/light_gray_text"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/title_search_filter"
                android:singleLine="true"/>

            <!-- CITY SPINNER - MOVED TO TOP -->
            <Spinner
                android:id="@+id/spinner_city"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_edittext_background"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@+id/et_search_venue" />

            <TextView
                android:id="@+id/tv_event_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Type"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinner_city"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_event_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_event_type_title"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wedding/Reception"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_background_inactive"
                    android:textColor="@color/chip_text_color_inactive"
                    app:chipStrokeColor="@color/chip_stroke_color_inactive"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Corporate Conference"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/vibrant_purple"
                    android:textColor="@android:color/white"
                    app:chipStrokeColor="@color/vibrant_purple"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthday Party"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_background_inactive"
                    android:textColor="@color/chip_text_color_inactive"
                    app:chipStrokeColor="@color/chip_stroke_color_inactive"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Social Gathering"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_background_inactive"
                    android:textColor="@color/chip_text_color_inactive"
                    app:chipStrokeColor="@color/chip_stroke_color_inactive"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sports Event"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_background_inactive"
                    android:textColor="@color/chip_text_color_inactive"
                    app:chipStrokeColor="@color/chip_stroke_color_inactive"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconVisible="false" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/tv_venue_category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue Category"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chip_group_event_type"/>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_venue_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:chipSpacingHorizontal="8dp"
                app:chipSpacingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_venue_category_title"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Banquet Halls"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_background_inactive"
                    android:textColor="@color/chip_text_color_inactive"
                    app:chipStrokeColor="@color/chip_stroke_color_inactive"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Grounds"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/vibrant_purple"
                    android:textColor="@android:color/white"
                    app:chipStrokeColor="@color/vibrant_purple"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Auditoriums"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_background_inactive"
                    android:textColor="@color/chip_text_color_inactive"
                    app:chipStrokeColor="@color/chip_stroke_color_inactive"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Community Centers"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_background_inactive"
                    android:textColor="@color/chip_text_color_inactive"
                    app:chipStrokeColor="@color/chip_stroke_color_inactive"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stadiums"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_background_inactive"
                    android:textColor="@color/chip_text_color_inactive"
                    app:chipStrokeColor="@color/chip_stroke_color_inactive"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconVisible="false" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurants"
                    style="@style/Widget.MaterialComponents.Chip.Filter"
                    app:chipBackgroundColor="@color/chip_background_inactive"
                    android:textColor="@color/chip_text_color_inactive"
                    app:chipStrokeColor="@color/chip_stroke_color_inactive"
                    app:chipStrokeWidth="1dp"
                    app:checkedIconVisible="false" />

            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:id="@+id/ll_guests_toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/chip_group_venue_category">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guests"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"/>

                <Switch
                    android:id="@+id/switch_guests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:thumbTint="@color/switch_thumb_color"
                    android:trackTint="@color/switch_track_color"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open Grounds"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="8dp"/>

                <Switch
                    android:id="@+id/switch_outdoor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:thumbTint="@color/switch_thumb_color"
                    android:trackTint="@color/switch_track_color"
                    tools:ignore="TouchTargetSizeCheck" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_guests_toggle"/>

            <TextView
                android:id="@+id/tv_location_value"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_edittext_background"
                android:drawableStart="@drawable/ic_location"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:text="Bandra, Mumbai"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_location_title" />

            <LinearLayout
                android:id="@+id/ll_guests_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_location_value">

                <TextView
                    android:id="@+id/tv_guests_count"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edittext_background"
                    android:drawableStart="@drawable/ic_guests"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="Guests: 150"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tv_max_budget"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_edittext_background"
                    android:drawableStart="@drawable/ic_budget"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="Max Budget: â‚¹50,000"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_amenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toBottomOf="@id/ll_guests_budget">

                <TextView
                    android:id="@+id/tv_amenities_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amenities"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/iv_amenities_expand"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_chevron_down"
                    app:tint="@android:color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:contentDescription="Expand Amenities" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_weather_suitability_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weather Suitability"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rl_amenities"/>

            <LinearLayout
                android:id="@+id/ll_weather_toggles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/tv_weather_suitability_title">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outdoor-friendly"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"/>

                <Switch
                    android:id="@+id/switch_outdoor_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:thumbTint="@color/switch_thumb_color"
                    android:trackTint="@color/switch_track_color"
                    android:layout_marginEnd="24dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Indoor-prepared"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"/>

                <Switch
                    android:id="@+id/switch_indoor_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:thumbTint="@color/switch_thumb_color"
                    android:trackTint="@color/switch_track_color"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_show_venues"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Show Venues"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:backgroundTint="@color/vibrant_purple"
                android:textAllCaps="false"
                android:layout_marginTop="48dp"
                android:layout_marginBottom="24dp"
                app:cornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@id/ll_weather_toggles"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>