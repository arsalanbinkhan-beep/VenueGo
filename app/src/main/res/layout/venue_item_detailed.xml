<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Venue Image -->
        <ImageView
            android:id="@+id/venue_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_venue_image"
            android:background="@drawable/image_background_rounded"
            android:contentDescription="Venue image"/>

        <!-- Venue Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/venue_image"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Name and Rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/venue_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Venue Name"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_star"
                        app:tint="@color/yellow_star" />

                    <TextView
                        android:id="@+id/venue_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="4.5"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Category and Location -->
            <TextView
                android:id="@+id/venue_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/category_background"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:text="Banquet Hall"
                android:textColor="#B388FF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/venue_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location, City"
                android:textColor="@color/light_gray_text"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_location_small"
                android:drawablePadding="4dp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Capacity and Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/venue_capacity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Capacity: 500"
                    android:textColor="@color/light_gray_text"
                    android:textSize="12sp"
                    android:drawableStart="@drawable/ic_capacity"
                    android:drawablePadding="4dp"/>

                <TextView
                    android:id="@+id/venue_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="â‚¹1,50,000"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_price"
                    android:drawablePadding="4dp"/>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/venue_image"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_view_details"
                android:layout_width="0dp"
                android:layout_height="74dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/vibrant_purple"
                android:text="View Details"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:cornerRadius="8dp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btn_book_now"
                android:layout_width="0dp"
                android:layout_height="74dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:text="Book Now"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:cornerRadius="8dp"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>