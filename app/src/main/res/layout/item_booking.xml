<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/card_background_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_venue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Venue Name"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRMED"
            android:textColor="@color/green_success"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/tv_venue_name" />

        <TextView
            android:id="@+id/tv_event_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wedding Reception"
            android:textColor="@color/light_gray_text"
            android:textSize="12sp"
            android:layout_below="@id/tv_venue_name"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tv_event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25 Dec 2024"
            android:textColor="@color/light_gray_text"
            android:textSize="12sp"
            android:layout_below="@id/tv_venue_name"
            android:layout_marginTop="4dp"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/tv_event_type"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_guest_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150 guests"
                android:textColor="@color/light_gray_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" • ₹75,000"
                android:textColor="@color/vibrant_purple"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_event_date"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/red_error"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="Cancel"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>