<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VenueGo"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/icon_bell"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bell"
            app:tint="@android:color/white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:contentDescription="Notifications"/>

        <ImageView
            android:id="@+id/icon_profile"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_profile"
            app:tint="@android:color/white"
            android:layout_toStartOf="@id/icon_bell"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:contentDescription="Profile"/>
    </RelativeLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Greeting Section -->
            <TextView
                android:id="@+id/greeting_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, User!"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/greeting_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Let's find the perfect spot for your next event!"
                android:textColor="@color/light_gray_text"
                android:textSize="16sp"
                android:layout_marginTop="4dp"/>

            <!-- Start New Plan Button -->
            <RelativeLayout
                android:id="@+id/search_bar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <Button
                    android:id="@+id/btn_start_new_plan"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Start a New Plan"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:backgroundTint="@color/vibrant_purple"
                    android:drawablePadding="0dp"
                    android:paddingStart="24dp"
                    android:gravity="start|center_vertical"
                    android:textAllCaps="false"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_search"
                    app:tint="@android:color/white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="24dp"
                    android:contentDescription="Search Icon"/>
            </RelativeLayout>

            <!-- Nearby Venues Section -->
            <TextView
                android:id="@+id/nearby_venues_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venues Near You"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewNearby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="4"
                tools:listitem="@layout/venue_card_item" />

            <TextView
                android:id="@+id/tvNoNearby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No venues found nearby"
                android:textColor="@color/light_gray_text"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"/>

            <!-- Trending Venues Section -->
            <TextView
                android:id="@+id/trending_venues_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trending Venues"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewTrending"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginTop="16dp"
                tools:listitem="@layout/venue_card_trending"
                tools:itemCount="4"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                />

            <!-- View All Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnViewAllNearby"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/vibrant_purple"
                    android:text="View All Nearby"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"/>

                <Button
                    android:id="@+id/btnViewAllTrending"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/vibrant_purple"
                    android:text="View All Trending"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom_nav_dark"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_nav_menu"/>
</LinearLayout>