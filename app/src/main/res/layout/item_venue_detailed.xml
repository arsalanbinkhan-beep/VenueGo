<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/card_background_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Venue Image -->
        <ImageView
            android:id="@+id/iv_venue_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_venue_image"
            android:background="@drawable/image_background_rounded"
            android:contentDescription="Venue image"/>

        <!-- Category Badge -->
        <TextView
            android:id="@+id/tv_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_venue_image"
            android:layout_alignTop="@id/iv_venue_image"
            android:layout_margin="12dp"
            android:text="Banquet Hall"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="@drawable/category_badge_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"/>

        <!-- Type Badge -->
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_venue_image"
            android:layout_alignEnd="@id/iv_venue_image"
            android:layout_margin="12dp"
            android:text="Indoor"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="@drawable/type_badge_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"/>

        <!-- Venue Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_venue_image"
            android:layout_marginTop="12dp"
            android:orientation="vertical">

            <!-- Name and Rating -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_venue_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Grand Banquet Hall And Conference Center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_star"
                        app:tint="@color/yellow_star" />

                    <TextView
                        android:id="@+id/tv_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="4.5"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tv_review_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="(120 reviews)"
                        android:textColor="@color/light_gray_text"
                        android:textSize="12sp"/>

                </LinearLayout>

            </LinearLayout>

            <!-- Address -->
            <TextView
                android:id="@+id/tv_venue_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="123 Main Street, Bandra West, Mumbai, Maharashtra 400050"
                android:textColor="@color/light_gray_text"
                android:textSize="12sp"
                android:maxLines="2"
                android:ellipsize="end"/>

            <!-- Quick Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_capacity"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Capacity: 500 guests"
                    android:textColor="@color/light_gray_text"
                    android:textSize="12sp"
                    android:drawableStart="@drawable/ic_capacity"
                    android:drawablePadding="4dp"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹1,50,000"
                    android:textColor="@color/vibrant_purple"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/ic_price"
                    android:drawablePadding="4dp"/>

            </LinearLayout>

            <!-- Amenities -->
            <TextView
                android:id="@+id/tv_amenities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="AC • Parking • WiFi • Catering • Stage"
                android:textColor="@color/light_gray_text"
                android:textSize="11sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <ImageView
                    android:id="@+id/btn_add_to_favorites"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_favorite_border"
                    android:background="@drawable/circle_button_background"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Add to favorites"
                    app:tint="@android:color/white" />

                <ImageView
                    android:id="@+id/btn_view_on_map"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_map"
                    android:background="@drawable/circle_button_background"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="View on map"
                    app:tint="@android:color/white" />

                <Button
                    android:id="@+id/btn_book_now"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Book Now"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/vibrant_purple"
                    app:cornerRadius="8dp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>